<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

  <!-- do not use import statements if CXFServlet init parameters link to this beans.xml --> 

  <import resource="classpath:META-INF/cxf/cxf.xml" />
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

  <jaxrs:server id="jaxrsPublishService">
    <jaxrs:serviceBeans>
      <ref bean="publishResource" />
      <ref bean="publishResourceLocal" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="publishResource" class="esg.search.publish.jaxrs.PublishResource" />
  <bean id="publishResourceLocal" class="esg.search.publish.jaxrs.PublishResourceLocal" />
  
</beans>