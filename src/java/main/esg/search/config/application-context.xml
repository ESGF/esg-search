<!-- Spring context configuration for core search services -->
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   					   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
                            
    <!-- Use Java Common Annotations: @Resource, @PostConstruct, @PreDestroy annotations -->
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
    
    <!-- Use Spring @Autowired, @Qualifier, @Value annotations -->
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/> 
    
    <!-- Configurable properties -->
	<bean id="searchPropertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:esg/search/config/application.properties" />
	</bean>
	
	<!-- node-specific ESGF properties -->
	<bean id="esgfProperties" class="esg.common.util.ESGFProperties" />

	<!-- publish context -->    
  	<context:component-scan base-package="esg.search.publish"/>

	<!-- search context -->
	<context:component-scan base-package="esg.search.query"/>
	
	<!-- feed context -->
	<context:component-scan base-package="esg.search.feed"/>
	
	<!-- main search service that uses the slave Solr instance on 8983 -->
	<bean name="searchService" class="esg.search.query.impl.solr.SearchServiceImpl">
		<constructor-arg value="${esg.search.solr.query.url}"/>
	</bean>
	
	<!-- secondary search service that uses the master Solr instance on port 8984 - used during publication -->
	<bean name="searchService2" class="esg.search.query.impl.solr.SearchServiceImpl">
		<constructor-arg value="${esg.search.solr.publish.url}"/>
	</bean>
	
  	<!-- Facet profile example -->
	<bean name="wsFacetProfile" class="esg.search.query.impl.solr.FacetProfileImpl">
		<constructor-arg index="0">
			 <map>
			 			 
			    <!--  special facets -->
			 	<entry key="type"><value>Type</value></entry>
			 	<entry key="master_id"><value>Master ID</value></entry>
			 	<entry key="dataset_id"><value>Dataset ID</value></entry>
			 	<entry key="file_id"><value>File ID</value></entry>
			 
			 	<!-- model facets -->
	          	<entry key="project"><value>Project</value></entry>
	          	<entry key="model"><value>Model</value></entry>
	          	<entry key="experiment"><value>Experiment</value></entry>
	          	<entry key="experiment_family"><value>Experiment Family</value></entry>
	          	<entry key="time_frequency"><value>Frequency</value></entry>
	          	<entry key="realm"><value>Realm</value></entry>
	          	<entry key="cf_standard_name"><value>CF Standard Name</value></entry>
	          	<entry key="institute"><value>Institute</value></entry>
	          	<entry key="variable"><value>Variable</value></entry>
	          	<entry key="product"><value>Product</value></entry>
	          	<entry key="ensemble"><value>Ensemble</value></entry>
	          	<entry key="MIP_table"><value>MIP table</value></entry>
	          	<entry key="variable_long_name"><value>Variable Long Name</value></entry>
	          		          	
	          	<!-- obs facets -->
	          	<entry key="source_id"><value>Instrument</value></entry>
	          	<entry key="processing_level"><value>Processing Level</value></entry>
	          	<entry key="data_structure"><value>Data Structure</value></entry>
	          	<!-- <entry key="processing_version"><value>Processing Version</value></entry> -->
	          			      
		      </map>
		</constructor-arg>
	</bean>
	
	<!-- Registry service providing dynamic list of shards for distributed search -->
	<bean id="registryService" class="esg.security.registry.service.impl.RegistryServiceLocalXmlImpl">
  		<constructor-arg index="0"><value>/esg/config/esgf_shards.xml</value></constructor-arg>
  	</bean>
	
</beans>
