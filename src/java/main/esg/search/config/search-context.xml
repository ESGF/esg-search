<?xml version="1.0" encoding="UTF-8"?>

<!-- Spring configuration for harvesting services based on Apache-Solr -->
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Facet profile.
	     These facets must be defined in the schema.xml file for the Apache Solr server -->
	<bean name="facetProfile" class="esg.search.query.impl.solr.FacetProfileImpl">
		<constructor-arg index="0">
			 <map>
			 
			 	<!-- CMIP5 profile -->
	          	<entry key="project"><value>Project</value></entry>
	          	<entry key="model"><value>Model</value></entry>
	          	<entry key="experiment"><value>Experiment</value></entry>
	          	<entry key="frequency"><value>Frequency</value></entry>
	          	<entry key="realm"><value>Realm</value></entry>
	          	<entry key="cf_variable"><value>CF Variable</value></entry>
	          	
	          	<!-- Obs profile -->
	          	<entry key="instrument"><value>Instrument</value></entry>
		      
		      </map>
		</constructor-arg>
	</bean>

	<!-- Client to the Apache-Solr server -->
	<bean name="searchService" class="esg.search.query.impl.solr.SearchServiceImpl">
		<constructor-arg index="0" ref="facetProfile"/>
		<constructor-arg index="1" value="http://jpl-esg.jpl.nasa.gov:8983/solr"/>
		<!-- target dataset query filter request handler -->
		<!-- <constructor-arg index="1" value="http://localhost:8983/solr"/> -->
	</bean>
                           
</beans>